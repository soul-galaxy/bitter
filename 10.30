//累加和
#include <stdio.h>
int main()
{
    int i=1;
    int sum=0;
    printf("请输入一个正整数：");
    scanf("%d",&i);
    for(i;i>0;i--)
    {
        sum=sum+i*i;
    }
    printf("累加和为：%d",sum);
    return 0;
}
