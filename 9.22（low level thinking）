//三个数大小的比较，最质朴的列举法，思路有待改进
#include <stdio.h>
int main()
{
    int a,b,c;
    printf("下面将为你比较三个数的大小\n");
    printf("请输入第一个数：\n");
    scanf("%d",&a);
    printf("请输入第二个数：\n");
    scanf("%d",&b);
    printf("请输入第三个数：\n");
    scanf("%d",&c);
    if(a>b && b>c)
       printf("%d>%d>%d",a,b,c);
    else if(a>c && c>b)
       printf("%d>%d>%d",a,c,b);
    else if(b>a && a>c)
       printf("%d>%d>%d",b,a,c);
    else if(b>c && c>a)
       printf("%d>%d>%d",b,c,a);
    else if(c>a && a>b)
       printf("%d>%d>%d",c,a,b);
    else
       printf("%d>%d>%d",c,b,a);
       
    return 0;
}
